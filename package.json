{
  "name": "clippy",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build:app": "bash scripts/build-app.sh",
    "build:dmg": "bash scripts/create-dmg.sh",
    "install": "bash scripts/install.sh",
    "uninstall": "bash scripts/uninstall.sh",
    "build": "bun build src/index.ts --compile --outfile clippy",
    "build:macos": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile clippy-macos",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile clippy-linux",
    "test": "bun test",
    "clean": "rm -rf dist/ ~/.clippy/ClippyBar ~/.clippy/clippy.sock ~/.clippy/clippy.pid"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9"
  }
}
